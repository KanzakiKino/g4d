{
	"name": "g4d",
	"description": "Graphics Library for dlang.",

	"license": "LGPL-3.0",
	"authors": ["KanzakiKino"],
	"copyright": "Copyright Â© 2018, KanzakiKino",

    "platforms": ["posix"],

    "targetName": "g4d",
    "targetPath": "./bin",
    "sourcePaths": ["./src"],
    "stringImportPaths": ["./src"],

    "dependencies": {
        "g4d:derelict-ft": "*",
        "derelict-gl3": "~>1.0.24",
        "derelict-glfw3": "~>3.1.3",
        "easyff-d": "~>1.0.9"
    },
    "subPackages": [
        "package/derelict-ft"
    ],

    "configurations": [
        {
            "name": "default",
            "targetType": "staticLibrary",

            "copyFiles-windows-x86"   : ["./lib/windows-x86/*.dll"],
            "copyFiles-windows-x86_64": ["./lib/windows-x86_64/*.dll"]
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "mainSourceFile": "./test.d",
            "dflags": ["-profile=gc"]
        }
    ]
}
